<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.thmotaun.coj.MainActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report A Fault" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Roads"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Electricity"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Fire Services"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Law Enforcement"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Parks"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Traffic Services"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Statements"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Housing"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Water &amp; Sanitation"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Solid Waste"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:text="Requests"
                android:textColor="@color/white"
                android:textSize="17sp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>